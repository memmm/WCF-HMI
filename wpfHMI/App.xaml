<Application x:Class="HmiStyle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:language="clr-namespace:HmiStyle.Language"
             xmlns:local="clr-namespace:HmiStyle"            
             StartupUri="MainScreens/FormMain.xaml">
             
    <Application.Resources>
        <ResourceDictionary>
            <language:Language x:Key="Language"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ThemeLight.xaml"/>
                <ResourceDictionary Source="Resources/ControlStyleResourceDictionary.xaml"/>
                <ResourceDictionary Source="Resources/KeyboardStyle.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        

        </ResourceDictionary>
    </Application.Resources>
</Application>




      