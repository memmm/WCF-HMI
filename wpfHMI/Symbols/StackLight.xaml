<UserControl x:Class="HmiStyle.Symbols.StackLight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HmiStyle.Symbols"
             xmlns:converter="clr-namespace:HmiStyle.Symbols"
             xmlns:control="clr-namespace:HmiStyle.Symbols"    
             xmlns:data="clr-namespace:HmiStyle.Symbols"
             mc:Ignorable="d" 
             x:Name="this" Width="29" Height="87"
             d:DataContext="{d:DesignInstance data:StackLight, IsDesignTimeCreatable=False}">
    <Grid>
       
        <Viewbox>
            <StackPanel Name="xCustomStackLight" VerticalAlignment="Top">
                <local:Lamp Width="100" Height="100"
                    Background="Red"  
               />
                <local:Lamp     Width="100" Height="100"
                    Background="Yellow"
                   />
                <local:Lamp Width="100" Height="100"
                    Background="Green"
                   />
            </StackPanel>
        </Viewbox>


      
    </Grid>
</UserControl>
