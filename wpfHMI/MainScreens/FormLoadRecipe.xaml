<Window x:Class="HMI.Domain.ConvertToCS.MainScreens.FormLoadRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI.Domain.ConvertToCS.MainScreens"
        mc:Ignorable="d"
        Title="FormLoadRecipe" Height="440" Width="460" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Height="43" Margin="102,355,0,0" VerticalAlignment="Top" Width="101" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="43" Margin="272,355,0,0" VerticalAlignment="Top" Width="100" Click="btnCancel_Click"/>
        <TextBox x:Name="tbRecipeDirectory" HorizontalAlignment="Left" Margin="142,11,0,0" Text="TextBox" VerticalAlignment="Top" Width="300"/>
        <Label x:Name="lblRecipeDir" Content="Recipe directory:" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="127"/>
        <ListBox x:Name="lbRecipeList" HorizontalAlignment="Left" Height="299" Margin="10,41,0,0" VerticalAlignment="Top" Width="432" SelectedItem="{Binding Path=SelectedRecipe}" SelectionChanged="lbRecipeList_SelectionChanged" MouseDoubleClick="lbRecipeList_MouseDoubleClick"/>

    </Grid>
</Window>
